[core]
  pager = LESSCHARSET=utf-8 less
[color "diff"]
  meta = yellow normal bold
[alias]
  st = status
  ci = commit
  co = checkout
  si = switch
  diffw = diff --word-diff=color
[grep]
  lineNumber = true
[svn]
  rmdir = true
[pull]
  rebase = true
[fetch]
  parallel = 0
[user]
  useConfigOnly = true
[merge]
  stat = false
[absorb]
  maxStack = 20
[push]
  default = upstream
[help]
  autocorrect = prompt
[advice]
  detachedHead = false
