#!/bin/bash

# User bin directory is not in the path by default on most system
export PATH=$HOME/bin:$PATH
# Add ccache before other compiler so that it's the one taken
export PATH=/usr/lib/ccache:$PATH

# Set CPU number
export CPU_COUNT=`nproc`

export CFLAGS="$CFLAGS -fcolor-diagnostics"
export CXXFLAGS="$CXXFLAGS -fcolor-diagnostics"

# Use most as pager (especially for man display) if available
[ `which most` ] && export PAGER=most

# Misc
export EDITOR=vim
export XML_CATALOGS_FILES=/etc/xml/catalog
export NINJA_STATUS="[%p][%f/%t] "
export CTEST_OUTPUT_ON_FAILURE=1

